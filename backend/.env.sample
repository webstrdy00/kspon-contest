# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here  # 반드시 변경하세요!
POSTGRES_DB=kspon
# DATABASE_URL은 자동 생성됩니다 (선택사항)
# DATABASE_URL=postgresql://postgres:your_password@localhost/kspon

# Security - 반드시 변경하세요!
SECRET_KEY=change_this_to_a_random_secret_key_use_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 공공데이터포털 API Keys - https://www.data.go.kr 에서 발급
DATA_GO_KR_API_KEY=your_data_go_kr_api_key_here  # 반드시 변경하세요!

# 공공데이터 API URLs (변경 불필요)
FACILITIES_API_URL=http://apis.data.go.kr/B554287/PublicSportsFacilitiesService
FUND_SUPPORT_API_URL=http://apis.data.go.kr/B551014/SRVC_API_SPRT_FUND
FUND_BUSINESS_API_URL=http://apis.data.go.kr/B551014/SRVC_API_SPRT_BIZ
PERFORMANCE_REWARD_API_URL=http://apis.data.go.kr/B551014/SRVC_API_ATHLT_WLFARE

# API 설정
API_TIMEOUT=30
API_MAX_RETRIES=3
API_PAGE_SIZE=100

# Scheduler
AUTO_START_SCHEDULER=false  # true로 설정하면 서버 시작 시 스케줄러 자동 시작

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]